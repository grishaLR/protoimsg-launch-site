---
interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'protoimsg | AIM-inspired group chat on the AT Protocol',
  description = 'Community chat rooms, peer-to-peer video calls, encrypted DMs, and buddy lists built on the AT Protocol. Works with Blacksky, Bluesky, or any atproto account.',
} = Astro.props;

import '../styles/global.css';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content="https://protoimsg.app" />
    <meta property="og:site_name" content="protoimsg" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>

  </head>
  <body>
    <slot />
  </body>
</html>
